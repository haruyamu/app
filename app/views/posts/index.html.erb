<div class="row mb-2">
  <div class="col-md-6 mx-auto mt-5">
    <div class="card flex-md-row mb-4 shadow-sm h-md-250">
      <div class="card-body d-flex flex-column align-items-start">
        <strong class="d-inline-block mb-2 text-success">Lank in</strong>
        <h3 class="mb-0">
          <a class="text-dark" href="#"> Everyone's book</a>
        </h3>
        <div class="mb-1 text-muted">Nov 11</div>
        <p class="card-text mb-auto">This is a book that everyone makes </p>
        <%= link_to  "jump to page",  "#" %>
      </div>
      <img src="assets/boku.jpeg" , class="books-image">
    </div>
  </div>
  <%= @posts.each do |p| %>
  <div class="col-md-6 mx-auto mt-5">
    <div class="card flex-md-row mb-4 shadow-sm h-md-250">
      <div class="card-body d-flex flex-column align-items-start p_height">
        <div class="d-inline-block mb-2 text-success"><%=p.place%></div>
        <h3 class="mb-0">
          <p class="title_plus"><%= p.title %></p>
        </h3>
        <h3 class="mb-0">
          <p class="content_plus"><%= p.content %></p>
        </h3>
        <div class="add-name">
          <%= link_to  "jump to page", post_path(p.id), class: "jump_link" %>
          <a href="/users/<%= p.user.id %>">
            <%= p.user.name %>
          </a>
          (<%= p.liked_users.count %>)
        </div>
      </div>
      <%= image_tag p.image, class: "card-img-right flex-auto d-none d-lg-block pic-size" if p.image.attached?%>
    </div>
  </div>
  <%end%>
</div>