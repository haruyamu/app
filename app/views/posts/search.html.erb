<div class="boss mt-5">
  <%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |f| %>
  <%= f.text_field :keyword, placeholder: "searching..", class: "input-search" %>
  <%= f.submit "検索", class: "btn-search" %>
  <% end %>
</div>
<%= @posts.each do |p| %>
<div class="col-md-6 mx-auto mt-5">
  <div class="card flex-md-row mb-4 shadow-sm h-md-250">
    <div class="card-body d-flex flex-column align-items-start p_height">
      <strong class="d-inline-block mb-2 text-success"><%=p.place%></strong>
      <h3 class="mb-0">
        <%= link_to p.title, "#",class:"text-dark p_title title_plus" %>
      </h3>
      <h3 class="mb-0">
        <a class="text-dark p_title" href="#"><%= p.content %></a>
      </h3>
      <%= link_to  "jump to page", post_path(@posts.ids), class: "jump_link" %>
    </div>
    <%= image_tag p.image, class: "card-img-right flex-auto d-none d-lg-block pic-size" if p.image.attached?%>
  </div>
</div>
<%end%>