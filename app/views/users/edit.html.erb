<div class="box">
  <div class="box-inner box_spe">
    <%= form_with model: @user, local: true do |f| %>
    <h1>User edit</h1>
    <div class="box-name">
      <%= f.label :name, "nickname" %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="box-email">
      <%= f.label :email, "Eメール" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "box_width" %>
    </div>
    <div class="actions">
      <%= f.submit "Update", class: :form__btn  %>
    </div>
    <% end %>
    <div class="back">
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>